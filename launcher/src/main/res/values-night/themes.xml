<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#1a1a1a</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>

        <item name="colorText">#fff</item>
        <item name="colorTextSecondary">#888</item>
        <item name="colorIconTint">#fff</item>
        <item name="colorDivider">#17ffffff</item>
        <item name="colorGroupTitleDefault">?colorText</item>
        <item name="colorPopupBackground">?colorPrimary</item>
        <item name="colorPopupActionsBackground">#424242</item>
        <item name="colorFolderBackground">#e8101010</item>
        <item name="colorFolderTitleBackground">#212121</item>
        <item name="colorItemShadowDefault">#60000000</item>
        <item name="colorSearchBarBackground">#1fff</item>
        <item name="colorSearchBarDropdownBackground">#e8101010</item>
        <item name="colorEditPanelBackground">?colorPrimaryDark</item>

        <item name="toolbarOverlayTheme">@style/AppTheme.Overlay</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>
</resources>
