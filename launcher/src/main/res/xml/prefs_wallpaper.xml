<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/title_settings_wallpaper">
        <Preference
            android:key="@string/key_wallpaper_change"
            android:title="@string/title_settings_wallpaper_change" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_settings_wallpaper_overlay">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="wallpaper_overlay_show"
            android:title="@string/title_settings_wallpaper_overlay_show" />
        <Preference
            android:dependency="wallpaper_overlay_show"
            android:key="wallpaper_overlay_color"
            android:title="@string/title_settings_wallpaper_overlay_color" />
    </PreferenceCategory>
</PreferenceScreen>