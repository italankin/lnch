<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Home">
        <Preference
            android:key="@string/prefs_wallpaper"
            android:title="Wallpaper" />
        <Preference
            android:key="@string/prefs_search"
            android:title="@string/title_settings_search" />
        <ListPreference
            android:defaultValue="compact"
            android:entries="@array/home_layout_desc"
            android:entryValues="@array/home_layouts"
            android:key="@string/prefs_home_layout"
            android:title="@string/title_settings_home_layout" />
        <Preference
            android:key="@string/prefs_apps"
            android:title="@string/title_settings_apps" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/edit_mode_prefs_title">
        <Preference
            android:key="@string/prefs_edit_mode"
            android:title="@string/edit_mode_prefs_hint" />
    </PreferenceCategory>
</PreferenceScreen>