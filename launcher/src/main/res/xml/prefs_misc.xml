<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="sensor"
        android:entries="@array/pref_desc_screen_orientation"
        android:entryValues="@array/pref_values_screen_orientation"
        android:key="screen_orientation"
        android:summary="%s"
        android:title="@string/settings_home_misc_orientation" />
    <ListPreference
        android:defaultValue="popup"
        android:entries="@array/pref_desc_app_long_click_actions"
        android:entryValues="@array/pref_values_app_long_click_actions"
        android:key="app_long_click_action"
        android:summary="%s"
        android:title="@string/settings_home_misc_long_action" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_scrollbar"
        android:title="@string/settings_home_misc_scrollbar" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="scroll_to_top"
        android:summary="@string/settings_home_misc_scroll_top_summary"
        android:title="@string/settings_home_misc_scroll_top" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="expand_notifications"
        android:summary="@string/settings_home_misc_expand_status_bar_summary"
        android:title="@string/settings_home_misc_expand_status_bar" />
    <PreferenceCategory android:title="@string/settings_home_misc_shortcuts">
        <Preference
            android:key="@string/pref_key_misc_shortcuts"
            android:title="@string/settings_home_misc_shortcuts" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_home_misc_notifications_title">
        <Preference
            android:key="@string/pref_key_misc_notifications"
            android:title="@string/settings_home_misc_notifications" />
    </PreferenceCategory>
</PreferenceScreen>
