<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="sensor"
        android:entries="@array/screen_orientation_desc"
        android:entryValues="@array/screen_orientation"
        android:key="screen_orientation"
        android:summary="%s"
        android:title="@string/title_settings_home_misc_screen_orientation" />
    <ListPreference
        android:defaultValue="popup"
        android:entries="@array/app_long_click_actions_desc"
        android:entryValues="@array/app_long_click_actions"
        android:key="app_long_click_action"
        android:summary="%s"
        android:title="@string/title_settings_home_misc_app_long_click_action" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_scrollbar"
        android:title="@string/title_settings_home_misc_scrollbar" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="scroll_to_top"
        android:summary="@string/title_settings_home_misc_scroll_to_top_summary"
        android:title="@string/title_settings_home_misc_scroll_to_top" />
</PreferenceScreen>