<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/cd_application_icon"
        android:scaleType="centerInside"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/original_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/visibility"
        android:layout_toEndOf="@id/icon"
        android:ellipsize="none"
        android:fadingEdgeLength="24dp"
        android:requiresFadingEdge="horizontal"
        android:singleLine="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/original_label"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/visibility"
        android:layout_toEndOf="@id/icon"
        android:ellipsize="none"
        android:fadingEdgeLength="24dp"
        android:requiresFadingEdge="horizontal"
        android:singleLine="true"
        android:textColor="?android:textColorSecondary"
        android:textSize="12sp"
        tools:text="@tools:sample/first_names" />

    <ImageView
        android:id="@+id/visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_application_visibility"
        android:padding="16dp"
        android:src="@drawable/ic_visibility_on" />

</RelativeLayout>
