<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#f0f0f0</item>
        <item name="colorPrimaryDark">#a0a0a0</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>

        <item name="colorText">#222</item>
        <item name="colorTextSecondary">#888</item>
        <item name="colorIconTint">#333</item>
        <item name="colorDivider">#17000000</item>
        <item name="colorGroupTitleDefault">?colorText</item>
        <item name="colorPopupBackground">?colorPrimary</item>
        <item name="colorPopupActionsBackground">#a0a0a0</item>
        <item name="colorFolderBackground">#e8f0f0f0</item>
        <item name="colorFolderTitleBackground">#e8a0a0a0</item>
        <item name="colorItemShadowDefault">#60000000</item>
        <item name="colorSearchBarBackground">#1000</item>
        <item name="colorSearchBarDropdownBackground">#e8f0f0f0</item>
        <item name="colorEditPanelBackground">?colorPrimaryDark</item>

        <item name="toolbarOverlayTheme">@style/AppTheme.Overlay</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>
</resources>
