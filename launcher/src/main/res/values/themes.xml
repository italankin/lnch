<resources>

    <style name="AppTheme" />

    <!-- Dark -->

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#1a1a1a</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>

        <item name="colorText">#fff</item>
        <item name="colorTextSecondary">#888</item>
        <item name="colorIconTint">#fff</item>
        <item name="colorDivider">#17ffffff</item>
        <item name="colorGroupTitleDefault">?colorText</item>
        <item name="colorPopupBackground">?colorPrimary</item>
        <item name="colorPopupActionsBackground">#424242</item>
        <item name="colorItemShadowDefault">#60000000</item>
        <item name="colorSearchBarBackground">#1fff</item>
        <item name="colorEditPanelBackground">?colorPrimaryDark</item>

        <item name="toolbarOverlayTheme">@style/AppTheme.Dark.Overlay</item>
    </style>

    <style name="AppTheme.Dark.Launcher">
        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.Dark.Preferences">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorSecondary">?colorTextSecondary</item>
    </style>

    <style name="AppTheme.Dark.Overlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">?colorText</item>
    </style>

    <!-- Light -->

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f0f0f0</item>
        <item name="colorPrimaryDark">#a0a0a0</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorText">#222</item>
        <item name="colorTextSecondary">#888</item>
        <item name="colorIconTint">#333</item>
        <item name="colorDivider">#17000000</item>
        <item name="colorGroupTitleDefault">?colorText</item>
        <item name="colorPopupBackground">?colorPrimary</item>
        <item name="colorPopupActionsBackground">#a0a0a0</item>
        <item name="colorItemShadowDefault">#60000000</item>
        <item name="colorSearchBarBackground">#1000</item>
        <item name="colorEditPanelBackground">?colorPrimaryDark</item>

        <item name="toolbarOverlayTheme">@style/AppTheme.Light.Overlay</item>
    </style>

    <style name="AppTheme.Light.Launcher">
        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.Light.Preferences">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorSecondary">?colorTextSecondary</item>
    </style>

    <style name="AppTheme.Light.Overlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">?colorText</item>
    </style>
</resources>
