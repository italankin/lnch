<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPopupBackground">?colorSurfaceContainerHigh</item>
        <item name="colorPopupActionsBackground">?colorSurfaceContainerHighest</item>

        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:navigationBarColor">?colorSurface</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar.Surface</item>
        <item name="preferenceCategoryTitleTextColor">?colorPrimary</item>
    </style>

    <style name="AppTheme.Preferences.DialogOverlay" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="AppTheme.Preferences">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="alertDialogTheme">@style/AppTheme.Preferences.DialogOverlay</item>
    </style>
</resources>
