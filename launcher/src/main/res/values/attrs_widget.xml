<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPickerView">
        <attr name="cp_model" format="enum">
            <enum name="rgb" value="0" />
            <enum name="argb" value="1" />
        </attr>
        <attr name="cp_previewVisible" format="boolean" />
        <attr name="cp_previewHeight" format="dimension" />
        <attr name="cp_selectedColor" format="color" />
        <attr name="cp_hexVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SliderPrefView">
        <attr name="spv_title" format="string" />
        <attr name="spv_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="ValuePrefView">
        <attr name="tpv_title" format="string" />
        <attr name="tpv_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="ArrowLayout">
        <attr name="al_colorArrowUp" format="color|reference" />
        <attr name="al_colorArrowDown" format="color|reference" />
        <attr name="al_arrowSize" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="ColorPreference">
        <attr name="colorpref_defaultColor" format="color" />
        <attr name="colorpref_resettable" format="boolean" />
        <attr name="colorpref_colorModel" format="enum">
            <enum name="rgb" value="0" />
            <enum name="argb" value="1" />
        </attr>
    </declare-styleable>
</resources>
