<resources>

    <style name="ActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="LauncherTheme" parent="ActivityTheme">
        <item name="android:statusBarColor">@color/status_bar_launcher</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="PreferenceTheme" parent="ActivityTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>
